<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".MainActivity">

    <include
        android:id="@+id/ly_toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="InformaciÃ³n de la cuenta"
        android:textSize="15sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ly_toolbar" />


    <TextView
        android:id="@+id/tv_datauser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="@string/txt_title_acc_information"
        android:textSize="17sp"
        android:visibility="visible"
        app:drawableRightCompat="@drawable/ic_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="@+id/tv_account"
        app:layout_constraintStart_toStartOf="@+id/tv_account"
        app:layout_constraintTop_toBottomOf="@+id/tv_account" />

    <TextView
        android:id="@+id/tv_datauser_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="@string/tv_title_password"
        android:textSize="17sp"
        android:visibility="visible"
        app:drawableRightCompat="@drawable/ic_arrow_forward_24"
        app:layout_constraintEnd_toEndOf="@+id/tv_datauser"
        app:layout_constraintStart_toStartOf="@+id/tv_datauser"
        app:layout_constraintTop_toBottomOf="@+id/tv_datauser" />


    <TextView
        android:id="@+id/tv_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto_light"
        android:text="Acciones"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_datauser_password" />


    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="@string/tv_nav_config_logout"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_action"
        app:layout_constraintStart_toStartOf="@+id/tv_action"
        app:layout_constraintTop_toBottomOf="@+id/tv_action" />

    <TextView
        android:id="@+id/tv_acc_deleted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:padding="8dp"
        android:text="Eliminar tus datos y cuenta"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tv_logout"
        app:layout_constraintStart_toStartOf="@+id/tv_logout"
        app:layout_constraintTop_toBottomOf="@+id/tv_logout" />


</androidx.constraintlayout.widget.ConstraintLayout>