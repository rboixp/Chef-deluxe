<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChefDeluxe" parent="Theme.Material3.Light.NoActionBar">

        <!-- colorPrimary i colorSecondary representa els colors de la app -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <!-- colorSurface s'usa per cards, bottom Sheet  -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray</item>


        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondaryVariant">#c79a00</item>
        <item name="colorOnSecondary">@color/red</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- TextInputLayout  -->
    <style name="OutlinedRoundBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">@color/txtinputly_stroke_color</item>
        <item name="boxBackgroundColor">@color/txtinputly_background_color</item>
        <item name="hintTextColor">@color/hint_stroke_color</item>
    </style>

    <!-- Boto Registre  -->
    <style name="RegistrationButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="strokeColor">@color/hint_stroke_color</item>
        <item name="strokeWidth">0.1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_enable_color</item>
    </style>

    <!-- Boto Login  -->
    <style name="LoginButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="strokeColor">@color/hint_stroke_color</item>
    </style>
    <!--   <item name="materialThemeOverlay">@style/ButtonNoPressThemeOverlay</item>          -->

    <!-- Boto Login2  -->
    <style name="ButtonNoPressThemeOverlay">
        <!-- Omple els botons amb color. El colorPrimary es el color de fons predeterminat -->
        <item name="colorPrimary">@color/color_primary</item>
    </style>


    <!--Cardview Registre-->
    <style name="CardViewRol">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/transparency</item>
        <item name="android:paddingStart">@dimen/margin</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:padding">3dp</item>
    </style>

    <!--Ttitle Toolbar-->
    <style name="ToolbarText" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/txt_toolbar</item>
    </style>





</resources>